@model IEnumerable<TaobaoExpress.DataAccess.RetailerProduct>

@{
    ViewBag.Title = "Retailer Products";
}

<h2>Retailer Products</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Products</h4>
        <hr />
        @Html.ValidationSummary(false)

        <div class="retailer-products">
            @Html.EditorForModel()
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a class="btn btn-info" onclick="javascript:Taobao.addRetailerProduct(@ViewBag.RetailerId)">Add</a>
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
